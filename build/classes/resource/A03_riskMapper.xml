<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="zenkit.web.dao.A03_riskDao">
 
 <resultMap type="risk" id="riskMap"/>
 <select id="riskList" resultMap="riskMap">
    
    SELECT j_name, r_name, rs_name, r_send, r_receive, r_regdate
    FROM z_job zj, z_risk zr
    WHERE zj.j_no = zr.j_no
     
 </select>
 

 <insert id="insertRisk" parameterType="risk">
 insert into z_risk values(z_risk_no_seq.nextval, #{r_name},#{r_content}, 
 sysdate, #{r_send}, #{r_receive},#{r_rcontent},#{r_file},#{j_no},#{rs_name})
 </insert>
 
 <select id="login" resultType="user">
 select * from Z_USER
 where u_id=#{u_id} and
       u_pass=#{u_pass}
 </select>

</mapper>
